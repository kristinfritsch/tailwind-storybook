{
  "compilerOptions": {
    "incremental": true,
    "module": "ESNext",
    "lib": ["ES2018", "DOM", "DOM.Iterable"],
    "jsx": "preserve",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist/src",
    "strict": true,
    "alwaysStrict": true,
    "emitDeclarationOnly": true,
    "moduleResolution": "node",
    "types": [],
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./src",
    "paths": {
      "@components/*": ["components/*"],
      "@styles/*": ["styles/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": [
    "**/node_modules",
    "**/build",
    "**/dist",
    "**/stories",
    "**/*.md",
    "**/rollup.config.js"
  ]
}
