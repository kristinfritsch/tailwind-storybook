{
  "compilerOptions": {
    "allowJs": false,
    "declaration": true,
    "declarationDir": "dist/types",
    "outDir": "./dist",
    "jsx": "react-jsx",
    "lib": ["es6", "dom", "es2016", "es2017"],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "resolveJsonModule": true,
    "rootDir": "./src",
    "sourceMap": true,
    "strict": true,
    "target": "esnext",
    "types": ["jest", "node"],
    "baseUrl": "./src",
    "paths": {
      "@components/*": ["components/*"],
      "@styles/*": ["styles/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": [
    "**/node_modules",
    "**/build",
    "**/dist",
    "**/*.md",
    "**/rollup.config.js"
  ]
}
